                </div>
                <div id="slide-4" class="slide-boxes" style="display: none;">
                    <div class="slide-box"></div>
                    <div class="slide-box"></div>
                </div>
                <div id="slide-5" class="slide-boxes" style="display: none;">
                    <div class="slide-box"></div>
                    <div class="slide-box"></div>
                </div>
                <div class="slide-controller">
                    <span id="stick-0" style="background-color: gray;"></span>
                    <span id="stick-1"></span>
                    <span id="stick-2"></span>
                    <span id="stick-3"></span>
                    <span id="stick-4"></span>
                    <span id="stick-5"></span>
                </div>
            </div>
            <div class="content-box2"></div>
            <div class="content-box3"></div>
