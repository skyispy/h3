<script src="/ts/header.js"></script>
<script src="/ts/main.js"></script>
<script>
    const searchInput = document.getElementById('searchInput');
    searchInput.addEventListener('keydown', (event) => {
        if(event.key === 'Enter') {
            if(searchInput.value) {
                location.href = `https://junhu.store/item/market?search=${searchInput.value}`;
            }
        }
    })
</script>
<script>
    const logoutBtn = document.getElementById("logOut");
logoutBtn.onclick = async () => {
    const response = await axios.post("/user/logout");
    if(response.status === 200) {
        location.href = `https://junhu.store/`;
    }
}
</script>
<script>
    sellBtn.onclick = async () =>  {
        try {
            const response = await axios.get('https://junhu.store/item/sell');
            location.href = 'https://junhu.store/item/sell';
        }catch {
            alert('로그인이 필요해요.')
        }
    }
</script>
</html>