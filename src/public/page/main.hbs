                    <div class="slide-box slide-animation"></div>
                    <div class="slide-box slide-animation"></div>
                </div>
                <div id="slide-1" class="slide-boxes" style="display: none;">
                    <div class="slide-box"></div>
                    <div class="slide-box"></div>
                </div>
                <div id="slide-2" class="slide-boxes" style="display: none;">
                    <div class="slide-box"></div>
